<div class="text-center mt-5">
  <h2>Projects</h2>
</div>

<% data.projects.each do |project| %>
  <% link_to (project.url), target: "_blank" do %>
  <div class="card-trip">
    <%= image_tag project.image %>
    <div class="card-trip-infos">
      <div>
         <h3><%= project.name %></h3>
        <p><%= project.description %></p>
        <div class="tech-list">
          <% project.tech.each do |tech| %>
            <i class="<%= tech %>"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
<% end %>
